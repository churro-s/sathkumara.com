body{font-family:"Open Sans","Helvetica Neue",Helvetica,Arial,sans-serif;color:#666;background-color:#FFF;margin:0;font-size:14px;line-height:1.1}::selection{background:#3498db;color:#fff;}::-moz-selection{background:#3498db;color:#fff;}form.contact input,form.contact textarea{width:200px}form.contact textarea{height:60px}form.contact{font-size:15px}#layout{padding-left:160px}#main{width:100%;min-width:390px}#header{text-align:center;height:110px;border-bottom:1px solid #eee;max-height:110px;min-height:110px;overflow-y:hidden;padding:10px 0}#header h1{font-size:3em}#header h2{font-size:1.5em}#content{width:80%;margin:0 auto 50px}#content h2:not(:first-child){margin-top:40px}#faceSpacer{height:110px;border-bottom:1px solid #333;display:block;width:100%;padding:10px 0;max-height:110px;min-height:110px}#face{width:110px;height:110px;border-radius:55px;text-align:center;display:block;margin:0 auto}#menu{width:160px;position:fixed;top:0;bottom:0;left:0;z-index:1000;overflow-y:auto;background-color:#222}#menu a{border:medium none;color:#aaa;padding:.6em 0 .6em .6em;white-space:normal}#menu .pure-menu-selected{background:none repeat scroll 0 0 #1f8dd6}#menu .pure-menu-selected a{color:#fff}#menu .pure-menu li a:hover,#menu .pure-menu li a:focus{background:#333}.pure-menu.pure-menu-open{border:0;background-color:transparent}.pure-menu .pure-menu-heading{border-bottom:1px solid #FFF;color:#FFF;font-size:110%;margin-top:.5em;text-transform:uppercase;display:block;line-height:1.5em;padding:5px 20px;text-decoration:none;white-space:nowrap}#menuToggle{width:35px;height:35px;padding:8px 5px;background:rgba(0,0,0,0.7);-moz-box-sizing:border-box;-webkit-box-sizing:border-box;box-sizing:border-box;cursor:pointer;position:fixed;left:0}#menuToggle.active{left:160px}#menuToggle:hover,#menuToggle:focus{background:#000}#menuToggle span.bar{display:block;background-color:#FFF;width:100%;height:3px;border-radius:2px}#menuToggle span.bar+span.bar{margin-top:5px}b,strong{line-height:20px}p{margin:0 0 14px;line-height:32px;font-size:16px;font-weight:300;color:black;text-rendering:optimizeLegibility;text-shadow:0 1px white}a{color:#3399f3;text-decoration:none}p a{font-weight:400;font-size:15px;line-height:20px}p b,p strong{font-weight:600}h1,h2,h3,h4,h5,h6{color:#2d2d2d;font-weight:500;line-height:1.1}h1,h2,h3{margin-bottom:10px;margin-top:20px}h4,h5,h6{margin-top:10px;margin-bottom:10px}h5.date{margin-top:20px}h1{font-size:38px}h2{font-size:32px}h3{font-size:24px}h4{font-size:18px}h5{font-size:14px}h6{font-size:12px}@media(max-width:870px){#layout{padding-left:0}#menu.pure-u{display:none}#menu.pure-u.showMenu{display:block}}
